<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ngarak.skeleton.sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.ngarak.skeleton.sample.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ngarak.skeleton.sample.RecyclerViewActivity" />
        <activity
            android:name="com.ngarak.skeleton.sample.ViewActivity"
            android:hardwareAccelerated="false" />
        <activity android:name="com.ngarak.skeleton.sample.StatusViewActivity"/>
    </application>

</manifest>